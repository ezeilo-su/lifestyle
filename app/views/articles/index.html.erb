<% provide(:title, "#{@category.name_capitalize}") %>
<div class="row no-gutters">
  <% if @articles.any? %>  
    <% @articles.each do |article| %>
      <div class="col-sm col-md-6">
        <div class="media">
          <%= image_tag(article.display_image) if article.image.attached? %>
          <div class="media-body">
            <span class="mt-2 cat-heading"><%= @category.name_capitalize %> </span>
            <h5 class="mt-0 media-title"><%= article.title %> </h5>
            <%= article.text %>
          </div>
          <div class="votes-icons">
            <%= link_to("<i class='fa fa-thumbs-up' aria-hidden='true'></i>".html_safe, votes_path(article_id: article.id), method: :post) %>
          <span class="mr-2 votes-stat"><%= pluralize(article.votes.count, 'vote') %></span>
          </div>
          <div class="thumbs-down">
            <%= link_to("<i class='fa fa-thumbs-down' aria-hidden='true'></i>".html_safe, votes_path(article_id: article.id), method: :delete) %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
