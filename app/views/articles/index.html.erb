<% provide(:title, 'Category Name') %>

<div class="row no-gutters">
<% if @articles.any? %>  
  <% @articles.each do |article| %>
    <div class="col-sm col-md-6">
      <a href="#" class="media-link">
        <div class="media">
          <%= image_tag article.display_image if article.image.attached? %>
          <div class="media-body">
            <span class="mt-2 cat-heading"><%= article.categories.first.name_capitalize %> </span>
            <h5 class="mt-0 media-title"><%= article.title %> </h5>
            <%= article.text %>
          </div>
        </div>
      </a>
    </div>
  <% end %>
<% end %>
</div>

