<header class="fixed-top">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <a href="/" class="page-brand">IoTPost<span class="dot"></span></a>
    <div class="collapse navbar-collapse" id="navbarNav">
    
      <ul class="navbar-nav mt-lg-0 ml-auto mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        <li>

        <% Category.all.each do |cat| %>
          <% if cat.articles.any? %>
            <li class="nav-item">
              <%= link_to "#{cat.name}", articles_url(category_id: cat.id), class: "nav-link" %>
            </li>
          <% end %>
        <% end %>   
      </ul>

      <ul class="navbar-nav">

        <% if user_signed_in? %>
          <li>
            <%= link_to "New Article", new_article_path, class: "nav-link" %>
          </li>

          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          </li>

          <li>
            <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>